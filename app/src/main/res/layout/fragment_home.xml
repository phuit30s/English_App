<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".HomeFragment">

    <Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF009688"
        android:elevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:elevation="4dp"
        android:text="Danh mục videos"
        android:textColor="@color/white"
        android:backgroundTint="#FF009688"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/toolBar"
        app:layout_constraintStart_toStartOf="@+id/toolBar"
        app:layout_constraintTop_toTopOf="@+id/toolBar" />

    <Button
        android:id="@+id/btnSY"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="260dp"
        android:elevation="4dp"
        android:text="Truy cập!"
        android:backgroundTint="#FF009688"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bấm vào nút để mở danh sách videos"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSY"
        app:layout_constraintStart_toStartOf="@+id/btnSY"
        app:layout_constraintTop_toBottomOf="@+id/btnSY" />

</androidx.constraintlayout.widget.ConstraintLayout>